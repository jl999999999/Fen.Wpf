<Window x:Class="Fen.Wpf.Controls.WindowTextBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fen.Wpf.Controls"
        mc:Ignorable="d"
        Title="WindowTextBox" Height="450" Width="800">
    <Grid>
        <TextBox Name="mytextbox" FontSize="30"  VerticalAlignment="Top" HorizontalAlignment="Left" BorderBrush="Orange" BorderThickness="1" SelectionBrush="Blue" Width="727">这是一个文本</TextBox>
        <Button Width="80" Height="30" FontSize="20" Click="Button_Click"   VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,50" >点击</Button>
        <Button Height="30" FontSize="20" Click="Button_Click_1"    VerticalAlignment="Top" HorizontalAlignment="Left" Margin="100,50">获取选中的文本内容</Button>
    </Grid>
</Window>
