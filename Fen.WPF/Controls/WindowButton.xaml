<Window x:Class="Fen.WPF.Controls.WindowButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fen.WPF.Controls"
        mc:Ignorable="d"
        Title="WindowButton" Height="450" Width="800">
    <!--Window节点下只能有一个二级节点-->
    <Grid>
        <Button Click="Button_Click_1" Width="100px" Height="30px" HorizontalAlignment="Left" VerticalAlignment="Top" Background="AliceBlue" BorderBrush="Red" BorderThickness="5,2,1,0" Margin="50,100,0,0">Button1</Button>
        <Button Width="100px" Height="30px" HorizontalAlignment="Left" VerticalAlignment="Top" Background="AliceBlue" BorderBrush="Transparent" Margin="50,150,0,0" Foreground="White"
              MouseMove="Button_MouseMove_1">Button1</Button>

    </Grid>
</Window>
