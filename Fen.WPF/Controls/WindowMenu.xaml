<Window x:Class="Fen.Wpf.Controls.WindowMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fen.Wpf.Controls"
          xmlns:en="clr-namespace:Fen.Wpf.Entity"
        mc:Ignorable="d"
        Title="WindowMenu" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <!--实现路由ui对Command的设置-->
        <RoutedUICommand x:Key="myCmd"></RoutedUICommand>
    </Window.Resources>
    <!--使用命令绑定CommandBinding-->
    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource myCmd}" Executed="CommandBinding_Executed"></CommandBinding>
    </Window.CommandBindings>
    <!--使用输入绑定InputBindings-->
    <Window.InputBindings>
        <KeyBinding Command="{StaticResource myCmd}" Gesture="Ctrl+8"></KeyBinding>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Menu VerticalAlignment="Top" Height="30" FontSize="20" Grid.Row="0">
            <MenuItem Header="菜单1"></MenuItem>
            <MenuItem Header="菜单2"></MenuItem>
            <MenuItem Header="菜单3">
                <MenuItem Header="菜单3-1">
                    <MenuItem Header="菜单3-1-1">
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="菜单3-2"></MenuItem>
            </MenuItem>
        </Menu>
        <Menu VerticalAlignment="Top" Height="25" FontSize="16" FontFamily="微软雅黑" Foreground="Black" Grid.Row="1">
            <MenuItem Height="21" Header="出入库管理" Command="{StaticResource myCmd}"></MenuItem>
            <MenuItem Height="21" Header="请假管理"></MenuItem>
            <MenuItem Height="21" Header="考勤管理"></MenuItem>
            <MenuItem Height="21" Header="单位管理"></MenuItem>
            <MenuItem Height="21" Header="类别管理" InputGestureText="Ctrl+8"></MenuItem>
        </Menu>
        <Menu Name="menu1" ItemsSource="{Binding}" VerticalAlignment="Top" Height="25" FontSize="16" FontFamily="微软雅黑" Foreground="Black" Grid.Row="2">
            <Menu.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type en:MenuInfo}" ItemsSource="{Binding SubMenus}">
                    <TextBlock Text="{Binding MenuName}"></TextBlock>
                    
                </HierarchicalDataTemplate>
            </Menu.ItemTemplate>
        </Menu>
    </Grid>
</Window>
