<Window x:Class="Fen.Wpf.Controls.WindowCheckBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fen.Wpf.Controls"
        mc:Ignorable="d"
        Title="WindowCheckBox" Height="450" Width="800">
    <Grid Name="gridmain">
        <Label VerticalAlignment="Top" Width="120"  FontSize="20" Foreground="White" Background="Orange">我的选课：</Label>
        <CheckBox Width="120" Height="20" VerticalAlignment="Top"  FontSize="15" Margin="0,50" Tag="1">C语言</CheckBox>
        <CheckBox Width="120" Height="20" VerticalAlignment="Top"  FontSize="15" Margin="0,70" Tag="2">计算机组成原理</CheckBox>
        <CheckBox Width="120" Height="20" VerticalAlignment="Top"  FontSize="15" Margin="0,90" Tag="3">计算机网络</CheckBox>

        <Button Width="110" Height="30" VerticalAlignment="Top"  FontSize="15" Margin="0,150"  Click="Button_Click_1">获取我的选课</Button>
    </Grid>
</Window>
