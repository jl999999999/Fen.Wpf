<Window x:Class="Fen.Wpf.Controls.WindowContextMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fen.Wpf.Controls"
          xmlns:en="clr-namespace:Fen.Wpf.Entity"
        mc:Ignorable="d"
        Title="WindowContextMenu" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock FontSize="30" Text="右键点击调出菜单1" Name="textblock" Width="260" Height="35" Grid.Row="0" Cursor="Hand">
            <TextBlock.ContextMenu>
                <ContextMenu ItemsSource="{Binding}">
                    <MenuItem Header="第1项"></MenuItem>
                    <MenuItem Header="第2项"></MenuItem>
                    <Separator></Separator>
                    <MenuItem Header="第3项"></MenuItem>
                    <MenuItem Header="第4项"></MenuItem>
                </ContextMenu>

            </TextBlock.ContextMenu></TextBlock>
        <TextBlock FontSize="30" Text="右键点击调出菜单2" Name="textblock1" Width="260" Height="35" Grid.Row="1" Cursor="Hand">
            <TextBlock.ContextMenu>
                <ContextMenu ItemsSource="{Binding}">
                    <ContextMenu.ItemTemplate>
                        <HierarchicalDataTemplate DataType="{x:Type en:MenuInfo}" ItemsSource="{Binding SubMenus}">
                            <TextBlock Text="{Binding MenuName}"></TextBlock>

                        </HierarchicalDataTemplate>
                    </ContextMenu.ItemTemplate>

                </ContextMenu>

            </TextBlock.ContextMenu></TextBlock>
    </Grid>
</Window>
