<Window x:Class="Fen.Wpf.Controls.WindowComboBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fen.Wpf.Controls"
         xmlns:src="clr-namespace:Fen.Wpf.Entity"
        mc:Ignorable="d"
        Title="WindowComboBox" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <StackPanel  Grid.Column="0"
             Grid.Row="6">
            <StackPanel.Resources>
                <src:VacationSpots x:Key="myVacations"/>
            </StackPanel.Resources>
            <ComboBox Name="comboBox1"
            ItemsSource="{StaticResource myVacations}"
            Text="My Cities"
            IsEditable="true"
            IsReadOnly="true"/>

            <TextBlock Text="{Binding ElementName=comboBox1, Path=SelectedItem}"/>
            <ComboBox Name="comboBox2" Text="第二个" Width="120" IsEditable="true" IsReadOnly="false" Height="30" VerticalAlignment="Top">
                <ComboBoxItem>选项1</ComboBoxItem>
                <ComboBoxItem>选项2</ComboBoxItem>
                <ComboBoxItem>选项3</ComboBoxItem>
                <Label>选项4</Label>
                <CheckBox>选项5</CheckBox>
                <CheckBox>选项6</CheckBox>
            </ComboBox>
            <ComboBox Name="comboBox3" Text="第三个" IsEditable="true" IsReadOnly="false" Width="120" Height="30" VerticalAlignment="Top">

            </ComboBox>
            <ComboBox ItemsSource="{Binding}" Name="comboBox4" Text="第四个" IsEditable="true" IsReadOnly="false" Width="120" Height="30" VerticalAlignment="Top">

            </ComboBox>
            <ComboBox Name="comboBox5" Text="第五个" IsEditable="true" IsReadOnly="false" Width="120" Height="30" VerticalAlignment="Top">

            </ComboBox>
            <Button Width="120">删除Items</Button>
            <Button Width="120">删除DataContext</Button>
            <Button Width="120">删除ItemsSource</Button>
        </StackPanel>
    </Grid>
</Window>
