<Window x:Class="Fen.Wpf.Controls.WindowToolBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fen.Wpf.Controls"
        mc:Ignorable="d"
        Title="WindowToolBar" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ToolBar Band="1" BandIndex="0"  VerticalAlignment="Top" Grid.Row="0">
            <Image Source="/images/01.gif"  Height="30"></Image>
            <Button>
                <Image Source="/images/02.gif"  Height="30"></Image>
            </Button>
            <Button>
                <Image Source="/images/03.gif"  Height="30"></Image>
            </Button>
            <Separator/>
            <Button>
                <Image Source="/images/04.gif"  Height="30"></Image>
            </Button>
            <Button>
                <Image Source="/images/05.gif"  Height="30"></Image>
            </Button>
            <Button>
                <Image Source="/images/06.png"  Height="30"></Image>
            </Button>
            <Separator/>
            <Button>
                <Image Source="/images/07.png"  Height="30"></Image>
            </Button>
            <Button>
                <Image Source="/images/08.gif"  Height="30"></Image>
            </Button>
            </ToolBar>
            <ToolBarTray Background="White" Grid.Row="1" Orientation="Vertical">
            <ToolBar Band="2" BandIndex="0">
                <Button>
                    <TextBlock>toolbar1</TextBlock>
                </Button>
                <Button>
                    <TextBlock>toolbar2</TextBlock>

                </Button>
                <Button>
                    <TextBlock>toolbar3</TextBlock>

                </Button>
                <Separator/>
                <Button>
                    <TextBlock>toolbar4</TextBlock>

                </Button>
                
            </ToolBar>
            <ToolBar Band="1" BandIndex="0"  VerticalAlignment="Top">
                <Image Source="/images/01.gif"  Height="30"></Image>
                <Button>
                    <Image Source="/images/02.gif"  Height="30"></Image>
                </Button>
                <Button>
                    <Image Source="/images/03.gif"  Height="30"></Image>
                </Button>
                <Separator/>
                <Button>
                    <Image Source="/images/04.gif"  Height="30"></Image>
                </Button>
                <Button>
                    <Image Source="/images/05.gif"  Height="30"></Image>
                </Button>
                <Button>
                    <Image Source="/images/06.png"  Height="30"></Image>
                </Button>
                <Separator/>
                <Button>
                    <Image Source="/images/07.png"  Height="30"></Image>
                </Button>
                <Button>
                    <Image Source="/images/08.gif"  Height="30"></Image>
                </Button>
            </ToolBar>
        </ToolBarTray>
    </Grid>
</Window>
